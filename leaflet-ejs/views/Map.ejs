    <script
      src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
      integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
      crossorigin=""
    ></script>
    <title>Bhumi Varta Test</title>
  </head>
  <body>
    <style>
      body {
        padding-top: 50px;
      }
      #map {
        height: 100vh;
        width: 100%;
      }
    </style>
    <div class="container flex flex-wrap">
      <div id="map"></div>
    </div>
    <script src="https://unpkg.com/leaflet@1.0.3/dist/leaflet.js"></script>
    <script>
      let newMap = L.map("map").setView([-5.45, 105.26667], 8);
      L.tileLayer(
        "https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}",
        {
          attribution:
            'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
          maxZoom: 18,
          id: "mapbox/streets-v11",
          tileSize: 512,
          zoomOffset: -1,
          accessToken:
            "pk.eyJ1IjoicmFyYWRtIiwiYSI6ImNrcnA5OTdkZzA0cjcyb244dDZyeG5heDEifQ.j4heT58FxPY0ya2ystl3dg",
        }
      ).addTo(newMap);

      let stasiunTanjungKarang = L.marker([-5.40859, 105.25989]).addTo(newMap);
      stasiunTanjungKarang
        .bindPopup("<b>You clicked marker:</b><br>Stasiun Tanjung Karang.")
        .openPopup();

      let bandaraRadenIntan = L.marker([-5.24293, 105.17631]).addTo(newMap);
      bandaraRadenIntan
        .bindPopup("<b>You clicked marker:</b><br>Bandara Raden Intan.")
        .openPopup();

      let cabanaSurf = L.marker([-5.30462, 103.99889]).addTo(newMap);
      cabanaSurf
        .bindPopup("<b>You clicked marker:</b><br>Villa Cabana Surf.")
        .openPopup();

      let tolKotaBaru = L.marker([-5.35811, 105.32738]).addTo(newMap);
      tolKotaBaru
        .bindPopup("<b>You clicked marker:</b><br>Gerbang Tol Kota Baru")
        .openPopup();

      let suohGeoThermal = L.marker([-5.23848, 104.26353]).addTo(newMap);
      suohGeoThermal
        .bindPopup("<b>You clicked marker:</b><br>Suoh Geo Thermal.")
        .openPopup();

      let temianganHill = L.marker([-5.10207, 104.43587]).addTo(newMap);
      temianganHill
        .bindPopup("<b>You clicked marker:</b><br>Temiangan Hill.")
        .openPopup();
    </script>
  </body>
</html>
